{% extends 'admin/admin.html.twig' %}

{% block body %}
    {% form_theme form 'tailwind_2_layout.html.twig' %}

    <h1 class="text-4xl font-bold mb-6 py-6">Cr√©er une nouvelle recette</h1>

    {{ form_start(form, { attr: { class: 'py-6' } }) }}

        <div class="mb-4 bg-emerald-200 rounded-lg py-4 flex flex-1/2">
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="mb-4 bg-emerald-200 rounded-lg py-4 flex flex-1/2">
            {{ form_label(form.slug) }}
            {{ form_widget(form.slug) }}
            {{ form_errors(form.slug) }}
        </div>

        <div class="mb-4 bg-emerald-200 rounded-lg py-4 flex flex-1/2">
            {{ form_label(form.content) }}
            {{ form_widget(form.content) }}
            {{ form_errors(form.content) }}
        </div>

        <div class="mb-4 bg-emerald-200 rounded-lg py-4 flex flex-1/2">
            {{ form_label(form.created_at) }}
            {{ form_widget(form.created_at) }}
            {{ form_errors(form.created_at) }}
        </div>

        <div class="mb-4 bg-emerald-200 rounded-lg py-4 flex flex-1/2">
            {{ form_label(form.updated_at) }}
            {{ form_widget(form.updated_at) }}
            {{ form_errors(form.updated_at) }}
        </div>

        <div class="mb-4 bg-emerald-200 rounded-lg py-4 flex flex-1/2">
            {{ form_label(form.duration) }}
            {{ form_widget(form.duration) }}
            {{ form_errors(form.duration) }}
        </div>

        <button type="submit" class="bg-emerald-600 text-white px-4 py-2 rounded hover:bg-emerald-700">
            Enregistrer
        </button>

    {{ form_end(form) }}
{% endblock %}
